{
  "name": "easyopenframeworks",
  "publisher": "nasiko",
  "displayName": "EasyOpenFrameworks",
  "description": "Utilities for creating and managing OpenFrameworks Projects",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "commands": [{
      "command": "easyopenframeworks.installOF",
      "title": "Install OpenFrameworks"
    }],
    "configuration": {
        "title": "EasyOpenFrameworks",
        "properties": {
            "easyopenframeworks.ofPath": {
                "type": "string",
                "default": "",
                "description": "Path to OpenFrameworks installation"
            }
        }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.96.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "eslint": "^9.16.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
